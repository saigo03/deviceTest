<div class="title"><h2>お問合せ一覧</h2></div>

<% @posts.each do |post| %>
  <div class="post-info">
    <p><%= post.id %></p>
    <%= post.title %>
    <p>送信時間: <%= post.created_at.strftime("%Y年%m月%d日 %H時%M分") %></p>
    <%= link_to '詳細を見る', adminshow_post_path(post) %>
  </div>
<% end %>


